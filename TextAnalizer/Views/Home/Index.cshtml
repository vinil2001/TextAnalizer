@model WordsInTextViewModel
@{
    ViewData["Title"] = "Home Page";
}

    <div class="mainField">
        <div>
            <h1 class="display-4">Welcome to text analizer</h1>
            <form action="Home" method="get">
                @if (Model.InputText != null)
                {
                    <textarea class="inputText" name="inputText" cols="95" rows="5">@Model.InputText</textarea>
                }
                else
                {
                    <textarea class="inputText" name="inputText" cols="95" rows="5" placeholder="Введите, пожалуйста, текст."></textarea>
                }

                <div class="calculateMetrics">
                    <input type="submit" value="Рассчитать метрики" />
                </div>
            </form>
        </div>
        <div>Количество повторений слов в тексте: </div>
        <div class="metrics">
            @if (Model.WordInText != null)
            {
                foreach (var i in Model.WordInText)
                {
                    <div class="word">
                        "@i.Word" - @i.Amount
                    </div>
                }
            }
        </div>
    </div>
